# Felicia's Finance - Environment Configuration Template
# Copy this file to .env and update with your values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug
PROJECT_NAME=felicias-finance

# =============================================================================
# CLUSTER CONFIGURATION
# =============================================================================
CLUSTER_NAME=felicias-finance
CLUSTER_REGION=us-central1
CLUSTER_ZONE=us-central1-a
PROJECT_ID=your-gcp-project-id

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================
NAMESPACE_DEV=felicias-finance-dev
NAMESPACE_PROD=felicias-finance
KUBECONFIG=~/.kube/config

# =============================================================================
# DOCKER REGISTRY
# =============================================================================
DOCKER_REGISTRY=gcr.io/your-project-id
DOCKER_TAG=latest

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/felicias_finance_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=felicias_finance_dev
DB_USER=postgres
DB_PASSWORD=your-secure-password

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Certificates
CERT_MANAGER_EMAIL=admin@yourdomain.com
DOMAIN_NAME=felicias-finance.yourdomain.com
TLS_CERT_PATH=./certs/tls.crt
TLS_KEY_PATH=./certs/tls.key

# Agent Security
AGENT_PRIVATE_KEY_PATH=./certs/agent.key
AGENT_CERTIFICATE_PATH=./certs/agent.crt
CA_CERTIFICATE_PATH=./certs/ca.crt

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this
MASTER_KEY_ID=your-master-key-id

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Agent Registry
AGENT_REGISTRY_URL=http://localhost:8080
AGENT_DISCOVERY_INTERVAL=30

# Banking Agent
BANKING_AGENT_ID=banking-agent-001
BANKING_AGENT_PORT=8081
BANKING_AGENT_CAPABILITIES=banking:transactions,banking:accounts,banking:transfers

# Crypto Agent
CRYPTO_AGENT_ID=crypto-agent-001
CRYPTO_AGENT_PORT=8082
CRYPTO_AGENT_CAPABILITIES=crypto:prices,crypto:trading,crypto:analysis

# Orchestrator
ORCHESTRATOR_PORT=8080
ORCHESTRATOR_GRPC_PORT=9090

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Banking Services
BANK_OF_ANTHOS_URL=http://bank-of-anthos.example.com
BANK_API_KEY=your-bank-api-key

# Crypto Exchanges
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET_KEY=your-coinbase-secret-key

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================
# Prometheus
PROMETHEUS_URL=http://localhost:9090
METRICS_PORT=9091

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_PASSWORD=admin

# Jaeger
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=./logs/application.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development flags
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_SWAGGER_UI=true
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Testing
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/felicias_finance_test
PYTEST_WORKERS=auto

# Hot reload
ENABLE_HOT_RELOAD=true
WATCH_FILES=true

# =============================================================================
# PRODUCTION CONFIGURATION (Override in production)
# =============================================================================
# Production flags (set these to false in production)
# DEBUG=false
# ENABLE_DEBUG_ENDPOINTS=false
# ENABLE_SWAGGER_UI=false
# LOG_LEVEL=info

# Production security (use strong values in production)
# JWT_SECRET_KEY=your-production-jwt-secret-key
# ENCRYPTION_KEY=your-production-encryption-key
# DB_PASSWORD=your-production-db-password
# REDIS_PASSWORD=your-production-redis-password

# Production scaling
# ORCHESTRATOR_REPLICAS=3
# BANKING_AGENT_REPLICAS=2
# CRYPTO_AGENT_REPLICAS=2

# Production resources
# ORCHESTRATOR_CPU_REQUEST=500m
# ORCHESTRATOR_MEMORY_REQUEST=1Gi
# ORCHESTRATOR_CPU_LIMIT=2000m
# ORCHESTRATOR_MEMORY_LIMIT=4Gi

# =============================================================================
# CLOUD PROVIDER CONFIGURATION
# =============================================================================
# Google Cloud Platform
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Google Kubernetes Engine
GKE_CLUSTER_NAME=felicias-finance
GKE_NODE_COUNT=3
GKE_MACHINE_TYPE=e2-standard-4
GKE_DISK_SIZE=100

# Google Cloud Storage
GCS_BUCKET_NAME=felicias-finance-storage
GCS_BACKUP_BUCKET=felicias-finance-backups

# =============================================================================
# TERRAFORM CONFIGURATION
# =============================================================================
TF_VAR_project_id=your-gcp-project-id
TF_VAR_region=us-central1
TF_VAR_zone=us-central1-a
TF_VAR_cluster_name=felicias-finance
TF_VAR_node_count=3
TF_VAR_machine_type=e2-standard-4

# =============================================================================
# HELM CONFIGURATION
# =============================================================================
HELM_CHART_VERSION=1.0.0
HELM_RELEASE_NAME=felicias-finance
HELM_VALUES_FILE=./infrastructure/helm/values/development.yaml

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
